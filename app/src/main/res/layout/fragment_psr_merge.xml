<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".psrupload.views.PsrMergeFragment">

    <ImageView
        android:id="@+id/mergeImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="400dp"
        android:contentDescription="@string/merged_psr"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/btn_submit_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mergeImageView"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nikosh"
        android:paddingHorizontal="50dp"
        android:text="@string/submit"
        android:textAllCaps="true"
        android:textSize="15sp" />
</RelativeLayout>