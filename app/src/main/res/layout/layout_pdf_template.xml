<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pdfLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/TableLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="See Chapter 5"
                android:textSize="10sp" />
        </TableLayout>

        <TableLayout
            android:id="@+id/TableLayout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="Para 10"
                android:textSize="10sp" />
        </TableLayout>

        <TableLayout
            android:id="@+id/TableLayout03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:background="@color/black">

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="FORM -C"
                android:textSize="10sp" />
        </TableLayout>

        <TableLayout
            android:id="@+id/TableLayout04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@color/black">

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="FORM -C"
                android:textSize="10sp" />
        </TableLayout>

        <TableLayout
            android:id="@+id/TableLayout05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="FORM -C"
                android:textSize="10sp" />
        </TableLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/declaration_for_remittance_received_from_foreign_ncountry_of_amount_exceeding_usd_10_000_or_equivalent"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I/We do hereby declare that I/we have received remittance of"
            android:textSize="8sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Amount in figure"
            android:textSize="8sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:hint="Amount in words"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" remitted or "
            android:textSize="8sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To be remitted by"
            android:textSize="8sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="(name and address of remitting bank)"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" on account of "
            android:textSize="8sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="(name and address of remitter)"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" for the purpose of "
            android:textSize="8sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="(purpose of remittance)"
            android:textSize="8sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.5">

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Date : "
                    android:textSize="8sp" />

                <EditText
                    android:layout_column="1"
                    android:padding="3dip"
                    android:textSize="8sp" />
            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TableRow>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_span="2"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textSize="8sp" />

            </TableRow>

            <TableRow>

                <View
                    android:layout_height="2dp"
                    android:layout_span="2"
                    android:layout_weight="2"
                    android:background="@color/black" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="100dp"
                    android:layout_span="2"
                    android:layout_weight="2"
                    android:text="(Name of Applicant)"
                    android:textAlignment="center"
                    android:textSize="8sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Nationality : "
                    android:textSize="8sp" />

                <EditText
                    android:layout_column="1"
                    android:padding="3dip"
                    android:textSize="8sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:padding="3dip"
                    android:text="Address : "
                    android:textSize="8sp" />

                <EditText
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:padding="3dip"
                    android:textSize="8sp" />
            </TableRow>

            <TableRow android:layout_height="53dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_span="2"
                    android:layout_weight="2"
                    android:background="@color/black" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="100dp"
                    android:layout_span="2"
                    android:layout_weight="2"
                    android:text="Signature and Stamp of the applicant"
                    android:textAlignment="center"
                    android:textSize="8sp" />

            </TableRow>


        </TableLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Form-C: Inward Remittance exceeding USD 10,000 (Ten thousand) of equeivalent."
        android:textAlignment="center"
        android:textSize="8sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TableRow>

            <TextView
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/table_border"
                android:text="Month"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:layout_height="30dp"
                android:layout_weight="4"
                android:background="@drawable/table_border"
                android:text="Country of ordering\n Customers"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:layout_height="30dp"
                android:layout_weight="4"
                android:background="@drawable/table_border"
                android:text="Purpose"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:layout_height="30dp"
                android:layout_weight="10"
                android:background="@drawable/table_border"
                android:text="Amount in\n(state currency)"
                android:textAlignment="center"
                android:textSize="8sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="20dp"
                android:layout_weight="2"
                android:background="@drawable/table_border"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:layout_height="20dp"
                android:layout_weight="4"
                android:background="@drawable/table_border"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:layout_height="20dp"
                android:layout_weight="4"
                android:background="@drawable/table_border"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:layout_height="20dp"
                android:layout_weight="10"
                android:background="@drawable/table_border"
                android:textAlignment="center"
                android:textSize="8sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight=".3">

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Coded by "
                    android:textSize="8sp" />

                <EditText
                    android:layout_column="1"
                    android:padding="3dip"
                    android:textSize="8sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Checked by "
                    android:textSize="8sp" />

                <EditText
                    android:layout_column="1"
                    android:padding="3dip"
                    android:textSize="8sp" />
            </TableRow>


        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purpose of remittance "
            android:textSize="8sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textSize="8sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We hereby certify that we are satisfied as to the identity of the applicant and that we have seen documentary
evidence which satisfies as to the bona fides of the declaration made on this form."
        android:textSize="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.5">
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Date : "
                    android:textSize="8sp" />

                <EditText
                    android:layout_column="1"
                    android:padding="3dip"
                    android:textSize="8sp" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <TableRow android:layout_height="53dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_span="2"
                    android:layout_weight="2"
                    android:background="@color/black" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="100dp"
                    android:layout_span="2"
                    android:layout_weight="2"
                    android:text="Signature and Stamp of Authorized Dealer"
                    android:textAlignment="center"
                    android:textSize="8sp" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Contd, P/2 " />
    </LinearLayout>

</LinearLayout>