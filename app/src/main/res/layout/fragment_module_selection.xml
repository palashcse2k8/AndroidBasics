<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".psrupload.views.ModuleSelectionFragment">

    <Button
        android:id="@+id/btn_psr_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/psr_upload"/>

    <Button
        android:id="@+id/btn_form_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_psr_upload"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/form_c"/>

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_form_c"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Camera"/>

</RelativeLayout>