<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".psrupload.PSRUploadActivity">

    <TextView
        android:id="@+id/module_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Upload PSR"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_view"
        android:padding="20sp"
        android:elevation="5sp"
        />

    <LinearLayout
        android:id="@+id/layout_tin_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/module_name"
        android:layout_marginTop="10sp"
        android:padding="10sp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="@color/white"
        android:elevation="2sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" TIN : "
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/label_tin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tax_assessment_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_tin_number"
        android:layout_marginTop="10sp"
        android:padding="10sp"
        android:background="@drawable/rounded_corner_view"
        android:backgroundTint="@color/white"
        android:elevation="2sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Tax Assessment Year:"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/label_tax_assessment_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50sp"
        android:elevation="@dimen/cardview_default_elevation"
        android:paddingHorizontal="50sp"
        android:paddingVertical="10sp"
        android:text="SUBMIT"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>